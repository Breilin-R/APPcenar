<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card text-center">
            <div class="card-body">
                <h3>Are you sure you want to delete this address?</h3>
                <p>{{address.name}}: {{address.description}}</p>
                <form action="/client/addresses/delete/{{address._id}}" method="POST">
                    <button class="btn btn-danger">Accept</button>
                    <a href="/client/addresses" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>