<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card">
            <div class="card-header">
                <h3>Crear Nueva Dirección</h3>
            </div>
            <div class="card-body">
                <form action="/client/addresses/create" method="POST">
                    <div class="mb-3">
                        <label>Nombre (ej. Casa, Trabajo)</label>
                        <input type="text" name="name" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label>Descripción (Calle, Número, Sector)</label>
                        <textarea name="description" class="form-control" rows="3" required></textarea>
                    </div>
                    <div class="d-grid gap-2">
                        <button class="btn btn-primary">Guardar Dirección</button>
                        <a href="/client/addresses" class="btn btn-secondary">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>