<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card">
            <div class="card-header">
                <h3>Configuración del Sistema</h3>
            </div>
            <div class="card-body">
                <form action="/admin/config" method="POST">
                    <div class="mb-3">
                        <label>Precio por Kilómetro (RD$)</label>
                        <input type="number" step="0.01" name="pricePerKm" class="form-control" value="{{pricePerKm}}"
                            required>
                    </div>
                    <div class="d-grid gap-2">
                        <button class="btn btn-primary">Guardar Configuración</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>