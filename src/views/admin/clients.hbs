<div class="row">
    <div class="col-md-12">
        <h1>Clientes</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Correo</th>
                    <th>Estado</th>
                    <th>Pedidos</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each clients}}
                <tr>
                    <td>{{name}}</td>
                    <td>{{surname}}</td>
                    <td>{{email}}</td>
                    <td>{{status}}</td>
                    <td>{{orderCount}}</td>
                    <td>
                        {{#if (eq status 'active')}}
                        <a href="/admin/clients/toggle/{{_id}}" class="btn btn-sm btn-warning">Desactivar</a>
                        {{else}}
                        <a href="/admin/clients/toggle/{{_id}}" class="btn btn-sm btn-success">Activar</a>
                        {{/if}}
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>