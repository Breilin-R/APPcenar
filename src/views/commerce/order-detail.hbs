<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3>Detalle del Pedido #{{order._id}}</h3>
                <span
                    class="badge bg-{{#if (eq order.status 'pending')}}warning{{else}}{{#if (eq order.status 'in_process')}}info{{else}}success{{/if}}{{/if}} fs-6">
                    {{order.status}}
                </span>
            </div>
            <div class="card-body">
                <div class="row mb-4">
                    <div class="col-md-6">
                        <h5>Cliente</h5>
                        <p>{{order.client.name}} {{order.client.surname}}</p>
                        <p>Tel: {{order.client.phone}}</p>
                        <p>Email: {{order.client.email}}</p>
                    </div>
                    <div class="col-md-6 text-end">
                        <h5>Fecha</h5>
                        <p>{{order.date}}</p>
                    </div>
                </div>

                <h5>Productos</h5>
                <ul class="list-group mb-4">
                    {{#each order.products}}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-0">{{name}}</h6>
                            <small class="text-muted">Cantidad: {{quantity}}</small>
                        </div>
                        <span>RD$ {{price}}</span>
                    </li>
                    {{/each}}
                </ul>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <h5>Direcci√≥n de Entrega</h5>
                        <p>{{order.address}}</p>
                    </div>
                    <div class="col-md-6">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between">
                                <span>Subtotal</span>
                                <strong>RD$ {{order.subtotal}}</strong>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                                <span>ITBIS</span>
                                <strong>RD$ {{order.itbis}}</strong>
                            </li>
                            <li class="list-group-item d-flex justify-content-between bg-light">
                                <span class="text-success fw-bold">Total</span>
                                <strong class="text-success">RD$ {{order.total}}</strong>
                            </li>
                        </ul>
                    </div>
                </div>

                {{#if (eq order.status 'pending')}}
                <div class="d-grid gap-2">
                    <form action="/commerce/order/assign/{{order._id}}" method="POST">
                        <button class="btn btn-success btn-lg w-100">Asignar Delivery</button>
                    </form>
                </div>
                {{/if}}

                {{#if order.delivery}}
                <div class="alert alert-info mt-3">
                    <h5>Delivery Asignado</h5>
                    <p>{{order.delivery.name}} {{order.delivery.surname}} ({{order.delivery.phone}})</p>
                </div>
                {{/if}}
            </div>
            <div class="card-footer text-muted text-center">
                <a href="/commerce" class="btn btn-secondary">Volver al Panel</a>
            </div>
        </div>
    </div>
</div>