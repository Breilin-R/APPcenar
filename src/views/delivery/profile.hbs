<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card">
            <div class="card-header">
                <h3>Mi Perfil (Delivery)</h3>
            </div>
            <div class="card-body">
                <div class="text-center mb-4">
                    <img src="{{delivery.profileImage}}" alt="Profile Image" class="rounded-circle"
                        style="width: 150px; height: 150px; object-fit: cover;">
                </div>
                <form action="/delivery/profile" method="POST" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label>Nombre</label>
                        <input type="text" name="name" class="form-control" value="{{delivery.name}}" required>
                    </div>
                    <div class="mb-3">
                        <label>Apellido</label>
                        <input type="text" name="surname" class="form-control" value="{{delivery.surname}}" required>
                    </div>
                    <div class="mb-3">
                        <label>Teléfono</label>
                        <input type="tel" name="phone" class="form-control" value="{{delivery.phone}}" required>
                    </div>
                    <div class="mb-3">
                        <label>Correo (No editable)</label>
                        <input type="email" class="form-control" value="{{delivery.email}}" disabled>
                    </div>
                    <div class="mb-3">
                        <label>Estado de Disponibilidad</label>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="isAvailable" disabled {{#if
                                delivery.isAvailable}}checked{{/if}}>
                            <label class="form-check-label" for="isAvailable">
                                {{#if delivery.isAvailable}}Disponible para entregas{{else}}Ocupado / No
                                disponible{{/if}}
                            </label>
                        </div>
                        <small class="text-muted">El estado cambia automáticamente al aceptar pedidos.</small>
                    </div>
                    <div class="mb-3">
                        <label>Cambiar Foto de Perfil</label>
                        <input type="file" name="profileImage" class="form-control">
                    </div>
                    <div class="d-grid gap-2">
                        <button class="btn btn-primary">Actualizar Perfil</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>